pipeline {
    agent {
        docker {
            image "node:14"
            args '-u root:root'
        }
    }

    stages {  // ✅ Ensure all `stage` blocks are inside `stages {}`
        stage("Dep install") {
            steps {
                sh "npm install"
            }
        }

        stage("package") {  // ✅ Moved inside `stages {}`
            steps {
                sh "npm pack"
            }
        }
    }
}
